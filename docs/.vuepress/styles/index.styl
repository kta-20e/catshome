p.feedback_link {
    text-align center
}
header.navbar,aside.sidebar,.theme-container{
    margin-top: 100px;
}
.banner{
  background: yellow; 
  border: dashed 8px black; 
  position: fixed; 
  top: 0; 
  width: 100vw; 
  z-index: 100; 
  color: black;
  text-align: center;
  height: 100px;
  font-size: 1.25rem;
  font-weight: bold;
  overflow: hidden;
}
@media (min-width: 40em) {
    .banner{
        font-size: 1.5rem;
    }
}

.footer {
  width: 100%;
  height: auto;
}
.columns {

  display: flex;
  justify-content: center;
  flex-direction: row;
  margin-bottom: 2em;
}
.column {
  text-align: left;
  margin: 0em 2.5em;
}
.icon {
  font-size:2em
}

@media (max-width: 600px) {
    .columns{
      flex-direction: column;
    }
    .column {
      text-align: center;
    }
}